<Page
	x:Class="Krisp.UI.Views.Pages.GenericPage" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	Title="GenericPage"
	Template="{StaticResource PageTemplateWithKrispLogo}"
	FontFamily="{StaticResource KrispFont}" xmlns:pages="clr-namespace:Krisp.UI.Views.Pages">
	<Grid>
		<TextBlock
			TextAlignment="Center"
			FontSize="14"
			Margin="0,18,0,0"
			VerticalAlignment="Top"
			Width="230"
			TextWrapping="Wrap"
			HorizontalAlignment="Center"
			Text="{Binding Path=Model.PageText}" />
		<Button
			Style="{StaticResource TransparentButtonStyle}"
			HorizontalAlignment="Center"
			Margin="0,92,0,0"
			VerticalAlignment="Top"
			Command="{Binding ButtonCommand}"
			Content="{Binding Path=Model.ButtonText}" />
	</Grid>
</Page>
