<UserControl
	x:Class="Krisp.UI.Views.Controls.OnboardingFinishView" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:l="clr-namespace:Krisp.UI" xmlns:gif="https://github.com/XamlAnimatedGif/XamlAnimatedGif"
	FontFamily="{StaticResource KrispFont}"
	Height="643"
	Width="1083"
	Background="#FFFFFFFF" xmlns:controls="clr-namespace:Krisp.UI.Views.Controls">
	<Grid>
		<TextBlock
			FontSize="28"
			FontWeight="Bold"
			Foreground="#3B3D50"
			HorizontalAlignment="Left"
			VerticalAlignment="Top"
			Margin="90,230,0,0"
			Text="{l:Loc YouAreDone}" />
		<TextBlock
			FontSize="16"
			Foreground="#3B3D50"
			HorizontalAlignment="Left"
			VerticalAlignment="Top"
			Margin="90,280,0,0"
			Text="{l:Loc SetupFinishedMessage}" />
		<Image
			Stretch="Uniform"
			Width="450"
			Height="385"
			HorizontalAlignment="Right"
			VerticalAlignment="Top"
			Margin="50" xmlns:xamlanimatedgif="clr-namespace:XamlAnimatedGif;assembly=XamlAnimatedGif"
			xamlanimatedgif:AnimationBehavior.RepeatBehavior="Forever"
			xamlanimatedgif:AnimationBehavior.SourceUri="/Krisp;component/Resources/Onboarding/krispGIF.gif" />
		<Button
			Style="{StaticResource ButtonStyle}"
			FontSize="18"
			FontWeight="Bold"
			Width="235"
			Height="54"
			VerticalAlignment="Top"
			HorizontalAlignment="Right"
			Margin="0,530,60,0"
			Content="{l:Loc Finish}"
			Click="FinishClicked" />
	</Grid>
</UserControl>
