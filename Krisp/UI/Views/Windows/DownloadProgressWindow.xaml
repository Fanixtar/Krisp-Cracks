<Window
	x:Class="Krisp.UI.Views.Windows.DownloadProgressWindow" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:l="clr-namespace:Krisp.UI" xmlns:local="clr-namespace:Krisp.UI.Views.Windows"
	FontFamily="{StaticResource KrispFont}"
	ResizeMode="NoResize"
	WindowStartupLocation="CenterScreen"
	SizeToContent="WidthAndHeight"
	Title="{l:Loc DownloadingUpdate}">
	<StackPanel
		Width="247"
		Margin="20">
		<TextBlock
			Text="{l:Loc Downloading}" />
		<ProgressBar
			Height="20"
			Margin="0 20 0 0"
			Style="{x:Null}"
			Value="{Binding CurrentProgress, Mode=OneWay}" />
	</StackPanel>
</Window>
