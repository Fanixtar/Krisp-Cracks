<Window
	x:Class="Krisp.UI.Views.Windows.RepairKrispWindow" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:l="clr-namespace:Krisp.UI" xmlns:Controls="clr-namespace:Krisp.UI.Views.Controls"
	FontFamily="{StaticResource KrispFont}"
	ResizeMode="NoResize"
	Topmost="True"
	WindowStartupLocation="CenterScreen"
	SizeToContent="WidthAndHeight" xmlns:windows="clr-namespace:Krisp.UI.Views.Windows"
	Title="{l:Loc RepairKrisp}">
	<StackPanel
		Margin="25"
		Orientation="Horizontal">
		<Controls:KrispLogo
			VerticalAlignment="Top"
			Height="50"
			Width="50"
			Margin="0, 0, 15, 0" />
		<StackPanel>
			<TextBlock
				Name="Message"
				TextWrapping="Wrap"
				FontSize="14"
				Width="313"
				Margin="0 0 0 10"
				Text="{l:Loc RepairMessage}" />
			<StackPanel
				Orientation="Horizontal"
				HorizontalAlignment="Right"
				Margin="0,15,0,0"
				Height="37">
				<Button
					Name="Cancel"
					Width="149"
					Style="{StaticResource NegativeButtonStyle}"
					Margin="0, 0, 15, 0"
					Content="{l:Loc Cancel}" />
				<Button
					Name="Repair"
					Width="149"
					Style="{StaticResource ButtonStyle}"
					Content="{l:Loc Repair}" />
			</StackPanel>
		</StackPanel>
	</StackPanel>
</Window>
