<Window
	x:Class="Krisp.UI.Views.Windows.MessageBox" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:l="clr-namespace:Krisp.UI" xmlns:Controls="clr-namespace:Krisp.UI.Views.Controls"
	Title="Krisp"
	FontFamily="{StaticResource KrispFont}"
	ResizeMode="NoResize"
	WindowStartupLocation="CenterScreen"
	SizeToContent="WidthAndHeight" xmlns:windows="clr-namespace:Krisp.UI.Views.Windows">
	<StackPanel
		Margin="10"
		Orientation="Horizontal">
		<Controls:KrispLogo
			HorizontalAlignment="Center"
			VerticalAlignment="Top"
			Height="55"
			Width="55" />
		<StackPanel
			Margin="10, 0, 0, 0">
			<TextBlock
				Name="Message"
				Height="70"
				Width="310"
				FontSize="14"
				TextWrapping="Wrap" />
			<StackPanel
				Margin="0, 15, 0, 0"
				Orientation="Horizontal"
				HorizontalAlignment="Right">
				<Button
					Name="Ok"
					Width="100"
					Height="30"
					IsCancel="True"
					Style="{StaticResource ButtonStyle}"
					Content="{l:Loc Ok}" />
			</StackPanel>
		</StackPanel>
	</StackPanel>
</Window>
